{% props members = [] %}

<section class="relative max-w-7xl w-full mx-auto px-4 sm:px-6 md:px-8 xl:px-5 mt-20">
    <div class="w-full border-b border-border-strong border-dashed pb-4 flex justify-between">
          <span class="head-title h-max flex w-max">
            <span class="relative px-3 py-0.5 z-4 text-secondary text-sm rounded">{{ 'team.sections.hero.subtitle' | trans }}</span>
          </span>
    </div>
    <div class="mt-16 grid sm:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-12">
        {% for _, member in members %}
            <twig:Content:Team:Member :member="member" :index="loop.index" />
        {% endfor %}
    </div>
</section>
