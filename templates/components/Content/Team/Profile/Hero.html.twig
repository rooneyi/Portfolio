{% props member %}

<section class="relative pt-12 pb-24">
    <twig:Pattern:Top />

    <div class="relative max-w-7xl w-full mx-auto px-4 sm:px-6 xl:px-2 flex flex-col md:flex-row">
        <div class="flex-1 lg:pr-20 relative">
            <div class="w-[calc(100%-1rem)] md:h-full lg:w-full rounded-xl flex relative">
                <img src="{{ asset(member.photo) }}" alt="{{ member.name }}" width="826" height="1239" class="w-full aspect-square object-cover object-top rounded-global"/>
                <twig:Breadcrumb class="absolute left-4 top-4 flex px-5 py-3 bg-white/50 backdrop-blur-sm text-fg rounded-global w-max">
                    <twig:Breadcrumb:Item title="{{ 'components.breadcrumb.team' | trans}}" href="{{ path("app_team_index") }}" />
                    <twig:Breadcrumb:Item title="{{ member.name }}" :primary="true" />
                </twig:Breadcrumb>
            </div>
        </div>

        <div class="md:py-16 md:w-1/2 xl:w-[45%]">
            <h2 class="text-fg-title font-medium text-3xl/snug">{{ member.name }}</h2>
            <h3 class="text-primary-900 text-xl">{{ member.role }}</h3>
            <ul class="mt-7 grid md:grid-cols-2 gap-x-6 gap-y-8">
                <li class="flex flex-col space-y-3 md:col-span-full">
                    <p class="text-fg-muted">{{ member.description | markdown_to_html  }}</p>
                </li>
                <li class="flex flex-col space-y-3 border-t pt-3 border-border-strong border-dashed">
                    <h3 class="text-lg font-medium text-fg-title inline-flex">
                        <twig:ux:icon name="hugeicons:contact-01" class="flex mt-1 mr-2" />
                        {{ "team.sections.profile.contact" | trans }}
                    </h3>
                    <div class="text-fg-muted space-y-3.5">
                        <a href="mailto:{{ member.contact.email }}" class="flex items-center gap-2 hover:text-primary ease-linear duration-200 w-max">
                            <twig:ux:icon name="hugeicons:mail-edit-02" />
                            <span class="flex-1">{{ member.contact.email }} </span>
                        </a>
                        <a href="tel:{{ member.contact.phone }}" class="flex items-center gap-2 hover:text-primary ease-linear duration-200 w-max">
                            <twig:ux:icon name="hugeicons:call-ringing-02" />
                            <span class="flex-1"> {{ member.contact.phone }} </span>
                        </a>
                    </div>
                </li>
                <li class="flex flex-col space-y-3 border-t pt-3 border-border-strong border-dashed">
                    <h3 class="text-lg font-medium text-fg-title inline-flex">
                        <twig:ux:icon name="hugeicons:language-skill" class="flex mt-1 mr-2" />
                        {{ "team.sections.profile.languages" | trans }}
                    </h3>
                    <ul class="space-y-2 list-disc list-outside ml-6 text-fg-muted">
                        {% for language in member.languages %}
                            <li>{{ language }}</li>
                        {% endfor %}
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</section>
