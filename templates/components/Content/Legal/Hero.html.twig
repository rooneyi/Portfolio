{% props document %}

<section class="relative pt-16 pb-24">
    <twig:Pattern:Top />

    <div class="relative z-10 max-w-7xl w-full mx-auto px-4 sm:px-6 xl:px-2 flex flex-col">
        <div class="flex flex-col flex-1">
            <twig:Breadcrumb class="flex px-5 py-3 bg-bg-surface text-fg-muted rounded-global w-max">
                <twig:Breadcrumb:Item title="{{ 'components.breadcrumb.legal' | trans}}" />
            </twig:Breadcrumb>

            <h1 class="mt-5 text-4xl sm:text-5xl xl:text-6xl/[1.15] text-transparent bg-clip-text bg-gradient-to-tr from-primary-950 via-gray-700 to-gray-900 max-w-4xl text-balance">
                {{ "legal.sections.hero.#{document}" | trans }}
            </h1>
        </div>
    </div>
</section>
