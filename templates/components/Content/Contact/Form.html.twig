    <div class="w-full overflow-hidden relative bg-bg border border-border-strong/40 shadow-lg shadow-gray-50/50 rounded-global py-8 md:py-10 lg:py-16 px-6 md:px-8">
        {{ form_start(form, {attr: {class: "relative w-full " ~ (form.vars.submitted ? 'is-submitted' : ''), novalidate: 'novalidate'}}) }}
        <div class="mb-6 pb-4 border-b border-border">
            <h2 class="font-medium text-lg text-fg-title">
                {{ 'contact.sections.hero.primary' | trans }}
            </h2>
        </div>
        <div class="grid gap-4 md:grid-cols-2">
            <div class="flex flex-col space-y-2">
                {{ form_label(form.name, null, { label_attr: { class: 'text-sm text-fg' } }) }}
                {{ form_widget(form.name, { attr: { class: 'flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm text-foreground ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 ' ~ (form.vars.submitted and not form.name.vars.valid ? 'is-invalid' : '') } }) }}
                <div class="ui-form-error">{{ form_errors(form.name) }}</div>
            </div>
            <div class="flex flex-col space-y-2">
                {{ form_label(form.email, null, { label_attr: { class: 'text-sm text-fg' } }) }}
                {{ form_widget(form.email, { attr: { class: 'flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm text-foreground ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 ' ~ (form.vars.submitted and not form.email.vars.valid ? 'is-invalid' : '') } }) }}
                <div class="ui-form-error">{{ form_errors(form.email) }}</div>
            </div>
            <div class="flex flex-col space-y-2 col-span-full">
                {{ form_label(form.phone, null, { label_attr: { class: 'text-sm text-fg' } }) }}
                {{ form_widget(form.phone, { attr: { class: 'flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm text-foreground ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 ' ~ (form.vars.submitted and not form.phone.vars.valid ? 'is-invalid' : '') } }) }}
                <div class="ui-form-error">{{ form_errors(form.phone) }}</div>
            </div>
            <div class="flex flex-col space-y-2 col-span-full">
                {{ form_label(form.subject, null, { label_attr: { class: 'text-sm text-fg' } }) }}
                {{ form_widget(form.subject, { attr: { class: 'flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm text-foreground ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 ' ~ (form.vars.submitted and not form.subject.vars.valid ? 'is-invalid' : '') } }) }}
                <div class="ui-form-error">{{ form_errors(form.subject) }}</div>
            </div>
            <div class="flex flex-col space-y-2 col-span-full">
                {{ form_label(form.message, null, { label_attr: { class: 'text-sm text-fg' } }) }}
                {{ form_widget(form.message, { attr: { class: 'w-full min-h-[140px] rounded-md border border-input bg-background px-3 py-2 text-sm text-foreground ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 resize-y ' ~ (form.vars.submitted and not form.message.vars.valid ? 'is-invalid' : '') } }) }}
                <div class="ui-form-error">{{ form_errors(form.message) }}</div>
            </div>
        </div>

        <twig:Button type="submit" class="mt-8" icon="hugeicons:sent-02">{{ 'contact.sections.form.send' | trans }}</twig:Button>
        {{ form_end(form) }}
    </div>

