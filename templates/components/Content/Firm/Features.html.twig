{% props features = [] %}

<section class="mt-28 xl:mt-32 max-w-7xl w-full mx-auto px-4 sm:px-6 md:px-8 xl:px-5">
    <div class="grid md:grid-cols-2 gap-1 p-1 bg-bg-surface/30 border border-border/40 shadow-lg shadow-gray-50/50 rounded-global">
        {% for _, feature in features %}
            <div class="flex-1 flex flex-col p-4 sm:p-6 xl:p-8 border border-border-strong/40 shadow-lg shadow-gray-50/50 rounded-global bg-bg">
                <h2 data-reveal data-direction="bottom" class="text-fg-title font-medium text-3xl/snug max-w-xl">
                    {{ feature.title }}
                </h2>
                <div data-reveal data-delay="0.1s" data-direction="bottom" class="mt-7 text-fg-muted">
                    {{ feature.description }}
                </div>
            </div>
        {% endfor %}
    </div>
</section>
