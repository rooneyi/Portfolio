{% props pillars = [] %}

<section class="mt-28 xl:mt-32 max-w-7xl w-full mx-auto px-4 sm:px-6 md:px-8 xl:px-5">
    <div class="flex flex-col text-center">
        <span class="head-title flex w-max mx-auto" data-reveal data-direction="top">
          <span class="relative px-3 py-0.5 z-4 text-secondary text-sm rounded">{{ 'firm.sections.pillars.title' | trans }}</span>
        </span>
        <h2 data-reveal data-direction="bottom" class="text-fg-title text-3xl/snug lg:text-4xl/snug font-medium text-balance mt-5 mx-auto max-w-2xl">
            {{ 'firm.sections.pillars.subtitle' | trans }}
        </h2>
    </div>
    <div data-stage-up class="mt-16 grid sm:grid-cols-2 lg:grid-cols-3 gap-1 p-1 bg-bg-surface/30 border border-border/40 shadow-lg shadow-gray-50/50 rounded-global">
        {% for _, pillar in pillars %}
            <div class="relative p-4 sm:p-6 rounded-global bg-bg flex flex-col border border-border-strong/40 shadow-lg shadow-gray-50/50">
                <h3 class="font-medium text-secondary md:text-xl">{{ pillar.title }}</h3>
                <p class="text-fg-muted mt-4">{{ pillar.description }}</p>
            </div>
        {% endfor %}
    </div>
</section>
