{% props resources  %}

<section class="mt-28 xl:mt-32 max-w-7xl w-full mx-auto px-4 sm:px-6 md:px-8 xl:px-5">
    <div class="flex flex-col md:flex-row md:justify-between md:gap-20 gap-10 md:items-end w-full">
        <div class="flex-1 md:max-w-2xl flex flex-col">
            <span data-reveal data-direction="top" class="head-title flex w-max">
              <span class="relative px-3 py-0.5 z-4 text-secondary text-sm rounded">{{ 'home.sections.resources.title' | trans }}</span>
            </span>
            <h2 data-reveal data-direction="bottom" class="text-fg-title text-3xl/snug lg:text-4xl/snug font-medium text-balance mt-o max-w-2xl">
                {{ 'home.sections.resources.subtitle' | trans }}
            </h2>
        </div>

        <div class="flex">
            <a data-scale-slide data-direction="right" href="{{ path("app_resources_index") }}" class="group relative inline-flex btn btn-xl btn-solid-secondary justify-center rounded-global py-1 pl-6 pr-14 font-medium">
                <span class="z-10 pr-2 text-nowrap">{{ 'home.sections.resources.explore' | trans }}</span>
                <div class="btn-solid-indic bg-secondary-700">
                    <div class="mr-3.5 flex items-center justify-center">
                        <twig:ux:icon name="hugeicons:arrow-right-02" class="iconify" />
                    </div>
                </div>
            </a>
        </div>
    </div>
    <div data-stage-up class="mt-16 grid sm:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-12">
        {% for resource in resources %}
            <twig:Content:Resources:Item :resource="resource" />
        {% endfor %}
    </div>
</section>
