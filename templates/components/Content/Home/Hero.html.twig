<section class="relative px-px sm:px-1 pt-0.5 sm:pt-1">
    <div class="relative min-h-[calc(100dvh-8rem)] lg:min-h-[calc(100dvh-7.35rem)] w-full rounded-md flex items-center">
        <div class="absolute inset-0 rounded-lg lg:rounded-md overflow-hidden">
            <div style="background-image: url({{ asset("/images/hero.webp") }})" class="size-full bg-cover rounded-md animate-background-pan"></div>
            <div class="absolute inset-0 overflow-hidden bg-gradient-to-b from-primary-950/80 to-secondary-950/60 rounded-md"></div>
        </div>
        <div class="relative max-w-7xl w-full mx-auto px-4 sm:px-6 md:px-8 xl:px-5 flex items-center h-full py-18 md:py-32 xl:py-36">
            <div class="flex flex-col flex-1 items-start max-w-5xl w-full">
                  <span class="head-title-b flex w-max" data-reveal data-direction="top">
                    <span class="relative px-3 py-0.5 z-4 text-secondary-200 bg-secondary-50/10 backdrop-blur-sm backdrop-saturate-150 text-sm rounded">
                      {{ 'home.sections.hero.subtitle' | trans }}
                    </span>
                  </span>
                <h1 data-reveal data-direction="top" data-delay="0.05" class="mt-5 text-4xl sm:text-5xl/tight xl:text-6xl/[1.15] text-transparent bg-clip-text bg-gradient-to-tr from-primary-50 via-gray-200 to-white max-w-3xl lg:max-w-4xl text-balance">
                    {{ 'home.sections.hero.title' | trans }}
                </h1>
                <p data-reveal data-delay="0.1" class="mt-8 flex max-w-xl text-gray-200">
                    {{ 'home.sections.hero.description'|trans }}
                </p>
                <div class="flex flex-wrap sm:items-center sm:flex-nowrap justify-start gap-3 mt-10">
                    <twig:Button
                        as="a"
                        href="{{ path('index') }}"
                        data-scale-slide
                        data-direction="left"
                        data-delay="0.1"
                        icon="hugeicons:arrow-right-double"
                    >
                        {{ 'home.sections.hero.discover' | trans }}
                    </twig:Button>
                </div>
            </div>
        </div>
    </div>
</section>
