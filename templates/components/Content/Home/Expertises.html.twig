{% props expertises  = [] %}

<section class="mt-28 xl:mt-32 max-w-7xl w-full mx-auto px-4 sm:px-6 md:px-8 xl:px-5 flex flex-col">
    <div class="flex flex-col md:flex-row md:justify-between md:gap-20 gap-10 md:items-end w-full">
        <div class="flex-1 md:max-w-2xl flex flex-col">
            <span data-reveal data-direction="top" class="head-title flex w-max">
              <span class="relative px-3 py-0.5 z-4 text-secondary text-sm rounded">{{ 'home.sections.expertises.title' | trans }}</span>
            </span>
            <h2 data-reveal data-direction="bottom" class="text-fg-title text-3xl/snug lg:text-4xl/snug font-medium text-balance mt-o max-w-2xl">
                {{ 'home.sections.expertises.subtitle' | trans }}
            </h2>
        </div>

        <div class="flex">
            <a data-scale-slide data-direction="right" href="{{ path("app_expertises_index") }}" class="group relative inline-flex btn btn-xl btn-solid-secondary justify-center rounded-global py-1 pl-6 pr-14 font-medium">
              <span class="z-10 pr-2 text-nowrap">
                {{ 'home.sections.expertises.explore' | trans }}
              </span>
                <div class="btn-solid-indic bg-secondary-700">
                    <div class="mr-3.5 flex items-center justify-center">
                        <twig:ux:icon name="hugeicons:arrow-right-02" class="iconify" />
                    </div>
                </div>
            </a>
        </div>
    </div>
    <div class="w-full grid relative p-1 bg-bg-surface/30 border border-border/40 shadow-lg shadow-gray-50/50 rounded-global">
        <div data-expertises-swiper class="mt-16 w-full swiper">
            <div class="swiper-wrapper w-full ">
                {% for _, expertise in expertises %}
                    <div class="swiper-slide h-full relative p-5 sm:p-6 md:p-8 rounded-global bg-bg flex flex-col border border-border-strong/40 shadow-lg shadow-gray-50/50">
                        <h3 class="font-medium text-secondary md:text-xl">
                            {{ expertise.title }}
                        </h3>
                        <p class="text-fg-muted mt-4">
                            {{ expertise.description }}
                        </p>
                    </div>
                {% endfor %}
            </div>
        </div>
        <button data-expertise-prev aria-label="Go to prev slide" class="z-20 absolute top-1/2 -translate-y-1/2 -left-4 btn btn-icon-sm sm:btn-icon-md bg-white hover:bg-primary hover:text-white rounded-global shadow-sm shadow-gray-50 border border-border">
            <twig:ux:icon name="hugeicons:arrow-left-01" class="iconify" />
        </button>
        <button data-expertise-next aria-label="Go to prev slide" class="z-20 absolute top-1/2 -translate-y-1/2 -right-4 btn btn-icon-sm sm:btn-icon-md bg-white hover:bg-primary hover:text-white rounded-global shadow-sm shadow-gray-50 border border-border">
            <twig:ux:icon name="hugeicons:arrow-right-01" class="iconify" />
        </button>
    </div>
</section>
