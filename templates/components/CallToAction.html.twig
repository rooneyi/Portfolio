<section class="-mb-32 md:-mb-40 mt-28 xl:mt-32 relative max-w-7xl w-full mx-auto px-4 sm:px-6 md:px-8 xl:px-5 py-1">
  <div class="w-full overflow-hidden text-center relative z-10 bg-bg border border-border-strong/40 shadow-lg shadow-gray-50/50 rounded-global py-8 md:py-10 lg:py-16 px-6 md:px-8">
        <twig:Pattern:Top class="-top-14 -left-10 md:-left-40 w-2/8 h-full rotate-45" />
        <twig:Pattern:Bottom class="-bottom-10 md:-bottom-40 -right-4 w-2/8 h-full rotate-45" />

        <span class="head-title flex w-max mx-auto">
          <span class="relative px-3 py-0.5 z-4 text-secondary text-sm rounded">{{ 'contact.cta.subtitle'|trans }}</span>
        </span>
        <h2 class="relative text-fg-title text-4xl sm:text-5xl/[1.15] text-balance mt-5 mx-auto max-w-3xl">
          {{ 'contact.cta.title'|trans }}
        </h2>
        <div class="relative flex justify-center gap-4 mt-8 flex-wrap">
            <twig:Button  href="{{ path('app_contact_index') }}" icon="hugeicons:comment-01" as="a">
                {{ 'contact.cta.primary'|trans }}
            </twig:Button>

            <twig:Button href="https://calendly.com/salvatrice-bahindwa-legalterlaw" target="_blank" variant="gray" icon="hugeicons:contact-02" as="a">
                {{ 'contact.cta.secondary'|trans }}
            </twig:Button>
        </div>
  </div>
</section>
